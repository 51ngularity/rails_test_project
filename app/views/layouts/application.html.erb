      </div>
    </div>
  </section>

  <section class="section">
    <div class="content">
      <%= yield %>
    </div>
  </section>

  <footer class="footer has-background-grey-light my-4 mx-4">
    <div class="content has-text-centered">
      <p>
        <div class="title">&copy 2020; Nenaschew Sergey</div>
      </p>
    </div>
  </footer>

