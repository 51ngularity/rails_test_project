<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        
        <div class="title is-size-3 has-text-centered">Neuen Produkt-Eintrag generieren</div>
        
        <% if @product.errors.any? %>
          <div class="section box has-background-warning-light">
            <div class="title has-text-danger"> Product-entry could not be created due to the following errors: </div>
            <ul>
              <% @product.errors.full_messages.each do |message| %>
                <li> <div class="content is-size-4"><%= message %></div> </li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with scope: :product, class: 'box has-background-info-light  my-6', url: products_path, local: true do |f| %>
            <div class="field">
              <%= f.label :Name, class: "title is-size-4" %> <br>
              <div class="control">
                <%= f.text_field :name, class: "input is-info", type: "text", placeholder: "Namen eingeben...", minlength: "3", maxlength: "100" %>
              </div>
            </div>

            <div class="field">
              <%= f.label :Beschreibung, class: "title is-size-4" %> <br>
              <div class="control">
                <div class="content has-text-centered">
                  <%= f.text_area :description, class: "textarea is-info", placeholder: "Beschreibung eingeben...", rows: "4", minlength: "10", maxlength: "5000" %>
                </div>
              </div>
            </div>

            <div class="field">
              <div class="level">
                <div class="level-item">
                  <%= f.submit :"speichern", class: "button is-success is-medium", id: 'product_submit' %>
                </div>
              </div>
            </div>
        <% end %>

    <%= link_to 'zurÃ¼ck zur Produktliste', '/products', class: 'button is-size-3 is-info is-outlined', id: 'back_to_index' %>

      </div>
    </div>
  </div>
</div>
